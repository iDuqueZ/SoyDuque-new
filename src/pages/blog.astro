---
//Import Layout
import Bloglayout from "../layouts/Bloglayout.astro";
import ListPosts from "../components/ListPosts.jsx";

const postList = await Astro.glob("../pages/post/*.md");

---

<Bloglayout title="Blog" description="Blogs de SoyDuque">
  <main class="min-h-screen bg-slate-100 mt-16">
    <div class="max-w-screen-xl mx-auto">
      <section class="mb-6">
        <h1 class="text-4xl md:text-6xl mb-4 font-semibold text-teal-600">
          Blog
        </h1>
        <p>
          Aqu√≠ encontraras joyas y otras tantas cosas que me gusta escribir:
        </p>
      </section>
      
      <section>
        <ListPosts postList={postList} client:load/>
      </section>
      
    </div>
  </main>
</Bloglayout>

<style>
  main {
    padding: 2rem;
    transition: all 0.5s ease-in-out;
  }
</style>
