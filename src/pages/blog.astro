---
//Import Layout
import Bloglayout from "../layouts/Bloglayout.astro"
import CardItem from "../components/CardItem.astro"


const postList = await Astro.glob("../pages/post/*.md");

// console.log(postList);
---

<Bloglayout title="Blog">
    <main class="h-screen bg-slate-100">
        <div class="max-w-screen-xl mx-auto">
            <section class="mb-16">
                <h1 class="text-4xl md:text-6xl mb-6 font-semibold text-teal-600">Blog</h1>
                <p>Aqu√≠ encontraras joyas y otras tantas cosas que me gusta escribir:</p>
            </section>
    
            <section>
                <ul class="grid grid-cols-4 gap-4">
                    {postList.map((post) => (
                        console.log(post.frontmatter),
                        <li class="border-zinc-400 border-solid border-1 bg-white p-4 rounded-md shadow-md">
                            <a href={post.url} class="text-teal-600 hover:underline">
                                
                                <div>
                                    <h2 class="text-2xl">{post.frontmatter.title}</h2>
                                    <p>{post.frontmatter.description}</p>
                                </div>
                            </a>
                        </li>
                    ))}
                </ul>
            </section>

            

        </div>
        
    </main>
</Bloglayout>

<style>
    main {
        padding: 2rem;
    }

    h1{
        line-height: normal;
        color: rgb(13 148 136);
    }
</style>
